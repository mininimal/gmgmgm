---
title: Work
layout: layouts/base.njk
---

<main class="archive">
  <section class="box titleRow">
    <h1>{{ title }}</h1>
    <span> {{ collections.work.length }} projects</span>
  </section>

  <section class="archiveList">

    {# Sort in reverse order #}
    {% for project in collections.work %}

      {% set id = loop.index %}
      <hr>
      <details name="projectsAccordion">
        <!-- Accordion header -->
        <summary id="summary-{{ id }}" aria-controls="content-{{ id }}" class="cluster box archiveItem">
          <span>{{ project.data.workYear }}</span>
          <h2>{{ project.data.title }}</h2>
          <span>{{ project.data.role[0] }}</span>
        </summary>
        <!-- Accordion content -->
        <div id="content-{{ id }}" role="region" aria-labelledby="summary-{{ id }}" class="reel">
          <aside class="stack">
            <p>{{ project.data.description }}</p>
            <a href="{{ project.url }}">Read full case study</a>
          </aside>
          {% if project.data.thumb %}
            <img src="{{ project.url }}images/{{ project.data.thumb }}" alt="Screenshot of {{ project.data.title }}">
          {% endif %}
        </div>
      </details>

    {% endfor %}
    
  </section>
</main>

<script src="/assets/js/dragscroll.js"></script>
---
tags: page
title: Work
---

<section>
  <h1>Work</h1>
  <span>{{ collections.work.length }} projects</span>
</section>

<section class="archive">

  {# Sort in reverse order #}
  {% for project in collections.work | sort(false, false, "data.workYear") | reverse %}

    {% set id = loop.index %}
    <details name="projectsAccordion" class="archiveSingle">
      <!-- Accordion header -->
      <summary id="summary-{{ id }}" aria-controls="content-{{ id }}" class="cluster">
        <span>{{ project.data.workYear }}</span>
        <h2>{{ project.data.title }}</h2>
        <span>{{ project.data.company }}</span>
      </summary>
      <!-- Accordion content -->
      <div id="content-{{ id }}" class="with-sidebar" role="region" aria-labelledby="summary-{{ id }}">
        <div class="stack">
          <p>{{ project.data.description }}</p>
          <a href="{{ project.url }}">Read more</a>
        </div>
        <figure class="frame">
          <img src="{{ project.url }}images/{{ project.data.thumb }}" alt="{{ project.data.title }}">
        </figure>
      </div>
    </details>

  {% endfor %}
  
</section>
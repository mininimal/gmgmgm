{# Sort projects by year #}
{% set workCollection = collections.work | sort(false, false, "data.workYear") | reverse %}

<h1>Work</h1>
<span>{{ workCollection.length }} projects</span>
{% for project in workCollection %}

<details name="projectsAccordion">
  <!-- Accordion header -->
  <summary id="summary-{{ id }}" aria-controls="content-{{ id }}" class="cluster">
    <span>{{ project.data.workYear }}</span>
    <h2>{{ project.data.title }}</h2>
    <span>{{ project.data.company }}</span>
  </summary>

  <!-- Accordion content -->
  <div id="content-{{ id }}" class="content with-sidebar" role="region" aria-labelledby="summary-{{ id }}">
    <div class="stack">
      <p>{{ project.data.description }}</p>
      <a href="{{ project.url }}">Read more</a>
    </div>
    <div class="frame">
      <img src="/assets/images/{{ project.data.thumb }}" alt="{{ project.data.title }}">
    </div>
  </div>
</details>

{% endfor %}